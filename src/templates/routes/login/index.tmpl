{{define "login"}}
<div class="uk-container uk-container-sm py-8">
    <div class="uk-card w-full max-w-md mx-auto">
        <div class="uk-card-header">
            <h1 class="text-2xl font-bold">Login</h1>
        </div>
        <div class="uk-card-body">
            {{if .Data.PageData.Error}}
            <div class="bg-destructive/15 text-destructive p-3 rounded-md mb-4">
                {{.Data.PageData.Error}}
            </div>
            {{end}}
            <form method="POST" action="/login{{if .Data.PageData.NextURL}}?next={{.Data.PageData.NextURL}}{{end}}">
                <div class="space-y-4">
                    <div>
                        <label for="email" class="block text-sm font-medium mb-1">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            value="{{.Data.PageData.Email}}"
                            class="w-full p-2 rounded-md border border-border bg-background"
                            required
                        >
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium mb-1">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="w-full p-2 rounded-md border border-border bg-background" 
                            required
                        >
                    </div>
                    <div>
                        <button type="submit" class="uk-btn uk-btn-primary w-full">Login</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="uk-card-footer text-center">
            <p>Don't have an account? <a href="/register{{if .Data.PageData.NextURL}}?next={{.Data.PageData.NextURL}}{{end}}" class="text-primary hover:underline">Register</a></p>
        </div>
    </div>
</div>
{{end}}